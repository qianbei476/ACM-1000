import java.util.Scanner;

public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner cin=new Scanner(System.in);
		while(cin.hasNext()){
			int n=cin.nextInt();
			int k=cin.nextInt();
			if(n>k){
				if(n*2/k==(double)n*2/(double)k)
					System.out.println(n*2/k);
				else
					System.out.println(n*2/k+1);
			}
			else
				System.out.println(2);
		}
	}

}
