import java.io.*;
import java.util.*;

public class Main {
	
	public static int C_Num(int x){
		int sum = 0;
		for(int i=1;i<=x;i++)
			sum+=i;
		return sum;
	}
	
	public static void main(String[] args) {
				Scanner cin = new Scanner(new BufferedInputStream(System.in));				
				int N = cin.nextInt();
				while(N>0&&N<=10){
					int m = cin.nextInt();
					int sum = 0;
					for(int i=1;i<=m;i++){
						sum+=C_Num(i);
					}
					System.out.println(sum);
					N--;
				}
	}	 
}
