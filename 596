import java.io.*;
import java.util.*;

public class Main {
	
	
	public static void main(String[] args) {
		Scanner cin = new Scanner(System.in);
		while(cin.hasNext()){
			int n = cin.nextInt();
			if(n==0)
				break;
			int max = 0;
			for(int i=0;i<n;i++){
				int x = cin.nextInt();
				int y = cin.nextInt();
				int temp = x+y;
				max = max<temp?temp:max;
			}
			System.out.println(max);
		}
	}
}
